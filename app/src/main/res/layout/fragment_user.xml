<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".ui.dictionary.DictionaryFragment">


    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_extra_large"
            android:text="@string/title_user"
            android:textColor="@color/light"
            android:textSize="@dimen/actionbar_title_size"
            android:textStyle="bold" />


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar"
        android:layout_marginBottom="@dimen/extra_margin_bottom_negative"
        android:backgroundTint="@color/milk"
        app:cardCornerRadius="@dimen/fragment_card_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
            android:layout_marginBottom="@dimen/bottom_nav_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_from_card">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_med"
                    android:layout_marginRight="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:backgroundTint="@color/light"
                    app:cardCornerRadius="@dimen/card_item_radius"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="9999dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="@dimen/margin_small"
                                    android:src="@drawable/ic_baseline_account_circle_24" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/displayName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nguyễn Tuấn Trường"
                                    android:textColor="@color/primary_dark"
                                    android:textSize="@dimen/setting_text_size"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/not_logged_in"
                                    android:textColor="@color/primary_dark"
                                    android:textSize="@dimen/setting_text_size"
                                    android:textStyle="bold" />
                            </LinearLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="@dimen/margin_small"
                                    android:backgroundTint="@color/milk"
                                    android:translationX="-10dp"
                                    app:cardCornerRadius="9999dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:id="@+id/arrow"

                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
                                </androidx.cardview.widget.CardView>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/editView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_med"
                                android:layout_marginRight="@dimen/margin_med"

                                app:cardCornerRadius="@dimen/margin_large"
                                app:cardElevation="0dp">

                                <EditText
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/milk"
                                    android:drawableLeft="@drawable/ic_outline_account_circle_24"
                                    android:drawableRight="@drawable/ic_baseline_clear_24"
                                    android:drawablePadding="@dimen/margin_med"
                                    android:hint="@string/name_hint"
                                    android:padding="@dimen/margin_large"
                                    android:text=""
                                    android:textSize="@dimen/input_text_size"
                                    app:cardElevation="0dp" />
                            </androidx.cardview.widget.CardView>

                            <Button
                                android:id="@+id/saveName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/margin_med"
                                android:layout_marginTop="@dimen/margin_med"
                                android:backgroundTint="@color/green"
                                android:padding="@dimen/margin_med"
                                android:text="Save display name"
                                android:textAllCaps="false"
                                android:textSize="@dimen/button_text_size" />

                            <TextView
                                android:id="@+id/changePassText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_med"
                                android:padding="@dimen/margin_small"
                                android:text="Or change your password"
                                android:textAlignment="center"
                                android:textColor="@color/blue_steam"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout

                            android:id="@+id/changePassView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_med"
                                android:layout_marginRight="@dimen/margin_med"

                                app:cardCornerRadius="@dimen/margin_large"
                                app:cardElevation="0dp">

                                <EditText
                                    android:id="@+id/currentPass"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/milk"
                                    android:drawableLeft="@drawable/ic_baseline_lock_open_24"
                                    android:drawableRight="@drawable/ic_baseline_clear_24"
                                    android:drawablePadding="@dimen/margin_med"
                                    android:hint="@string/current_password_hint"
                                    android:inputType="textPassword"
                                    android:padding="@dimen/margin_large"
                                    android:text=""
                                    android:textSize="@dimen/input_text_size"
                                    app:cardElevation="0dp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_med"
                                android:layout_marginTop="@dimen/margin_med"
                                android:layout_marginRight="@dimen/margin_med"
                                app:cardCornerRadius="@dimen/margin_large"
                                app:cardElevation="0dp">

                                <EditText
                                    android:id="@+id/newPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/milk"
                                    android:drawableLeft="@drawable/ic_baseline_key_24"
                                    android:drawableRight="@drawable/ic_baseline_clear_24"
                                    android:drawablePadding="@dimen/margin_med"
                                    android:hint="@string/new_password_hint"
                                    android:inputType="textPassword"
                                    android:padding="@dimen/margin_large"
                                    android:text=""
                                    android:textSize="@dimen/input_text_size"
                                    app:cardElevation="0dp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_med"
                                android:layout_marginTop="@dimen/margin_med"
                                android:layout_marginRight="@dimen/margin_med"
                                app:cardCornerRadius="@dimen/margin_large"
                                app:cardElevation="0dp">

                                <EditText
                                    android:id="@+id/renewPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/milk"
                                    android:drawableLeft="@drawable/ic_baseline_key_24"
                                    android:drawableRight="@drawable/ic_baseline_clear_24"
                                    android:drawablePadding="@dimen/margin_med"
                                    android:hint="@string/re_new_password_hint"
                                    android:inputType="textPassword"
                                    android:padding="@dimen/margin_large"
                                    android:text=""
                                    android:textSize="@dimen/input_text_size"
                                    app:cardElevation="0dp" />
                            </androidx.cardview.widget.CardView>

                            <Button
                                android:id="@+id/changePass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_med"
                                android:layout_marginTop="@dimen/margin_med"
                                android:layout_marginEnd="@dimen/margin_med"
                                android:layout_marginBottom="@dimen/margin_med"
                                android:backgroundTint="@color/secondary_color"
                                android:padding="@dimen/margin_med"
                                android:text="Change pass"
                                android:textAllCaps="false"
                                android:textSize="@dimen/button_text_size" />

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_med"
                    android:layout_marginRight="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:backgroundTint="@color/light"
                    app:cardCornerRadius="@dimen/card_item_radius"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_large"
                            android:src="@drawable/ic_baseline_cloud_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_large"
                            android:text="@string/backup"
                            android:textColor="@color/primary_dark"
                            android:textSize="@dimen/setting_text_size" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/load"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_med"
                    android:layout_marginRight="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:backgroundTint="@color/light"
                    app:cardCornerRadius="@dimen/card_item_radius"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_large"
                            android:src="@drawable/ic_baseline_cloud_download_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_large"
                            android:text="@string/load"
                            android:textColor="@color/primary_dark"
                            android:textSize="@dimen/setting_text_size" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_med"
                    android:layout_marginRight="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:backgroundTint="@color/light"
                    app:cardCornerRadius="@dimen/card_item_radius"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_large"
                            android:src="@drawable/ic_baseline_login_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_large"
                            android:text="@string/login"
                            android:textColor="@color/primary_dark"
                            android:textSize="@dimen/setting_text_size" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_med"
                    android:layout_marginRight="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:backgroundTint="@color/light"
                    app:cardCornerRadius="@dimen/card_item_radius"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_large"
                            android:src="@drawable/ic_baseline_logout_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_large"
                            android:text="@string/logout"
                            android:textColor="@color/primary_dark"
                            android:textSize="@dimen/setting_text_size" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>
        </ScrollView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>