<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainCard"
        android:layout_margin="3dp"
        app:cardCornerRadius="@dimen/margin_med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/milk">
    <RelativeLayout
        android:orientation="vertical"
        android:padding="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_below="@id/pinyin_prv"
            android:id="@+id/character_prv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_med"
            android:layout_centerHorizontal="true"
            android:text="è¯­"
            android:textColor="@color/blue_steam"
            android:textSize="@dimen/text_size_preview"
            android:textStyle="bold" />
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/pinyin_prv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/pinyin_size_preview"
            android:text="loading"/>
        <View
            android:id="@+id/divide_prv"
            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_below="@id/character_prv"
            android:background="@color/gray"
            />
        <TextView
            android:layout_below="@id/divide_prv"
            android:layout_centerHorizontal="true"
            android:id="@+id/mean_prv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/pinyin_size_preview"
            android:text="loading"/>

    </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
