<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_med">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light"
        app:cardCornerRadius="@dimen/card_item_radius">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/exam_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_mass"

                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_large"
                android:paddingTop="@dimen/margin_med"
                android:paddingRight="@dimen/margin_large"
                android:paddingBottom="@dimen/margin_med">

                <TextView
                    android:id="@+id/pinyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nǐ huì shuō Hànyǔ ？"
                    android:textSize="@dimen/traditional_size" />

                <TextView
                    android:id="@+id/hanzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你会说汉语？"
                    android:textColor="@color/primary_dark"
                    android:textSize="@dimen/traditional_size"
                    android:textStyle="" />

                <TextView
                    android:id="@+id/mean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How are you able to speak Chinese?"
                    android:textColor="@color/primary_dark"
                    android:textSize="@dimen/traditional_size"
                    android:textStyle="italic" />

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/soundPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabSize="mini"
                app:rippleColor="@color/gray"
                app:srcCompat="@drawable/ic_baseline_volume_up_24"
                app:tint="@color/black" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>