<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quiz.play.QuizPlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point: "
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_med"
            android:layout_marginBottom="@dimen/margin_med">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HSK "
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hsk_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/current_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/max_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginRight="@dimen/margin_med"
            android:backgroundTint="@color/main_color"
            app:cardCornerRadius="@dimen/dialog_card_radius">

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_large"
                android:text="which one word have mean I,me?"
                android:textAlignment="center"
                android:textColor="@color/light"
                android:textSize="@dimen/search_text_size"
                android:textStyle="bold" />


        </com.google.android.material.card.MaterialCardView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">


            <Button
                android:id="@+id/answer_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/quiz_button_height"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_med"
                android:layout_marginTop="@dimen/margin_large"
                android:backgroundTint="@color/main_color"
                android:padding="@dimen/margin_med"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/answer_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/quiz_button_height"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_med"
                android:layout_marginTop="@dimen/margin_large"
                android:backgroundTint="@color/main_color"
                android:padding="@dimen/margin_med"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/answer_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/quiz_button_height"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_med"

                android:backgroundTint="@color/main_color"
                android:padding="@dimen/margin_med"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/answer_4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/quiz_button_height"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_med"

                android:backgroundTint="@color/main_color"
                android:padding="@dimen/margin_med"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size" />
        </GridLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_large"
            android:padding="@dimen/margin_med"
            android:text="Next question"
            android:backgroundTint="@color/green"
            android:textAllCaps="false"
            android:textSize="@dimen/button_text_size" />

    </LinearLayout>

</RelativeLayout>